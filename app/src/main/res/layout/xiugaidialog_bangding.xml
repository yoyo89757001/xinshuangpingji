<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/title2"
            android:text="输入注册码绑定激活"
            android:textSize="18sp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
<LinearLayout
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/llllll"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:text="注册码:"
        android:textColor="@color/blake"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="@color/textcolor"
        android:textSize="16sp"
        android:maxLength="24"
        android:text="1033-9992-1040-2652-1607"
        android:paddingLeft="16dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:id="@+id/idid"
        android:layout_width="match_parent"
        android:layout_height="60dp" />


</LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/jiazai_ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ProgressBar
                android:id="@+id/preeeee"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/testt"
                android:textColor="#3722dc"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:layout_width="0dp"
                android:textColor="@color/colorBar_bg"
                android:layout_weight="1"
                android:text="确认"
                android:id="@+id/queren"
                android:textSize="16sp"
                android:background="@null"
                android:layout_height="50dp" />

            <View
                android:layout_width="0.6dp"
                android:background="@color/tabtextcolo"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:textSize="16sp"
                android:id="@+id/quxiao"
                android:text="关闭"
                android:textColor="@color/colorBar_bg"
                android:layout_height="50dp" />

        </LinearLayout>



      </LinearLayout>
</LinearLayout>