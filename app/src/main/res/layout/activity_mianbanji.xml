<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:background="@drawable/bgbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fffff"
        android:src="@drawable/logo"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:layout_width="200px"
        android:layout_height="50px" />

        <RelativeLayout
            android:id="@+id/rlrl"
            android:padding="2dp"
            android:background="@drawable/zidonghuoqu333"
            android:layout_below="@+id/fffff"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <megvii.testfacepass.camera.CameraPreview
                    android:id="@+id/preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical" />

                <megvii.testfacepass.view.FaceView
                    android:id="@+id/fcview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            
            <TextView
                android:textColor="@color/white"
                android:textSize="30px"
                android:gravity="center"
                android:id="@+id/tishi"
                android:visibility="gone"
                android:background="@drawable/zidonghuoqu333"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40px"
                android:layout_width="240px"
                android:layout_height="72px" />

        </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/fffff"
        android:layout_toRightOf="@+id/rlrl"
        android:layout_marginLeft="30px"
        android:orientation="vertical"
        android:background="@drawable/zidonghuoqu333"
        android:layout_marginTop="20px"
        android:layout_marginBottom="50px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/hh"
            android:layout_marginTop="12px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/im1"
                android:layout_marginLeft="30px"
                android:layout_marginRight="15px"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_height="120px" />


            <ImageView
                android:id="@+id/im2"
                android:layout_marginLeft="15px"
                android:layout_marginRight="30px"
                android:background="@color/white"
                android:layout_toRightOf="@+id/im1"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ggtt"
            android:layout_below="@+id/hh"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:textSize="16px"
                android:gravity="center"
                android:text="身份证照片"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/white"
                android:textSize="16px"
                android:text="现场照片"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
        <TextView
            android:layout_below="@+id/ggtt"
            android:text="相似度"
            android:id="@+id/xiangsidu"
            android:gravity="center"
            android:background="@drawable/zidonghuoqu2221"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="16px"
            android:layout_marginTop="10px"
            android:layout_width="160px"
            android:layout_height="30px" />



    </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="姓名"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="性别"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="名族"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="出生"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="身份证号"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="住址"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/xingming"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginTop="40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:id="@+id/xingbie"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mingzu"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/chusheng"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/haoma"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/zhuzhi"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
