<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#666666"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="显示屏交叉"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/YES"
                android:text="YES"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCross"/>
            <RadioButton
                android:id="@+id/NO"
                android:text="NO"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCross"/>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="摄像头朝向"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/front"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:text="前置"
                android:textSize="20sp"
                android:onClick="onRadioButtonClicked"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/back"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="后置" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="摄像头角度"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/camera0"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCameraRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/camera90"
                android:text="90"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCameraRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/camera180"
                android:text="180"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCameraRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/camera270"
                android:text="270"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCameraRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="算法头朝向"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/face0"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onFaceRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/face90"
                android:text="90"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onFaceRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/face180"
                android:text="180"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onFaceRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/face270"
                android:text="270"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onFaceRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <Button
            android:id="@+id/cancel"
            android:text="重置"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/jiaohu3"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/ok"
            android:layout_marginLeft="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/jiaohu3"
            android:textSize="18sp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:onClick="onClick"/>
    </LinearLayout>

</LinearLayout>
